<!DOCTYPE html>
<html>
  <head>
    <title>Kumar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-expand-lg bg-white border-bottom">
  <%= link_to root_path, class: "navbar-left" do %>
      <%= image_tag "kumarx.png", id: "nav-logo" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
	  <%= link_to "Modules", unit_modules_path, class:"nav-link" %>
      </li>
      <li class="nav-item">
	  <%= link_to "Events", cpd_events_path, class: "nav-link" %>
      </li>
    </ul>
    <ul class = "navbar-nav">
	<% if not user_signed_in? or not current_user.profile.present? %>
	<li class = "nav-item">
	    <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
	</li>
	<li class = "nav-item">
	    <%= link_to "Login", new_user_session_path, class: "nav-link" %>
	</li>
	<% else %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	    <%= (current_user.profile.first_name + " " + current_user.profile.last_name) %>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
	    <%= link_to "View Profile", profile_path(current_user), class: "dropdown-item"%>
	    <%= link_to "My Events", user_events_path,class: "dropdown-item" %>
	    <%= link_to "My Modules", user_modules_path,class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
	    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>

	<% end %>
    </ul>
  </div>
</nav>
<div class = "container mt-3" >
    <%= yield %>
</div>
  </body>
</html>
